{
  "extends": ["config:base"],
  "masterIssue": true,
  "schedule": ["every weekend"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major", "minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "packagePatterns": [".*aws-cdk"],
      "groupName": "cdk deps"
    },
    {
      "packagePatterns": ["^@types/"],
      "groupName": "ts-types"
    },
    {
      "packagePatterns": ["^jest", "ts-jest"],
      "groupName": "test-utils"
    }
  ]
}
